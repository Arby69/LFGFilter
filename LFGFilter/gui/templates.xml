<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<CheckButton name="LFGFSmallCheckButtonTemplate" virtual="true" inherits="OptionsBaseCheckButtonTemplate">
		<Size x="16" y="16"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnShow>
							LFGFilterCheckButton_OnLoad(self)
						</OnShow>
					</Scripts>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				getglobal(self:GetName().."Text"):SetText(self:GetText())
			</OnLoad>
		</Scripts>
	</CheckButton>

	<Button name="OutfitterTabTemplate" inherits="CharacterFrameTabButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				PlaySound(SOUNDKIT.IG_MAINMENU_OPEN)
				LFGFilter:ShowPanel(self:GetID())
			</OnClick>
		</Scripts>
	</Button>

	<CheckButton name="OutfitterCheckboxTemplate" inherits="OptionsCheckButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				if self:GetChecked() then
				PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON)
				else
				PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_OFF)
				end
			</OnClick>
		</Scripts>
	</CheckButton>

